<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/background"
    tools:context="com.codeadventure.oncue.Setting">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:weightSum="1">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|clip_vertical|clip_horizontal"
                android:text="Settings"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/myaccount"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/rectangle1"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15sp"
            android:src="@drawable/account"
            />
        <TextView
            android:text="My Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:paddingTop="2sp"
            android:id="@+id/account"
            android:layout_alignParentStart="true"
            android:clickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/appsettings"
        android:layout_below="@+id/myaccount"
        android:background="@drawable/rectangle1"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15sp"
            android:src="@drawable/setting"
            />
        <TextView
            android:text="App Settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:paddingTop="2sp"
            android:id="@+id/appsetting"
            android:layout_alignParentStart="true"
            android:clickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/refer"
        android:layout_below="@+id/appsettings"
        android:background="@drawable/rectangle1"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15sp"
            android:src="@drawable/refer"
            />
        <TextView
            android:text="Refer n Earn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:paddingTop="2sp"
            android:id="@+id/refernearn"
            android:layout_alignParentStart="true"
            android:clickable="true"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/help"
        android:layout_below="@+id/refer"
        android:background="@drawable/rectangle1"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15sp"
            android:src="@drawable/help"
            />
        <TextView
            android:text="Help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:paddingTop="2sp"
            android:id="@+id/helpin"
            android:layout_alignParentStart="true"
            android:clickable="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/about"
        android:layout_below="@+id/help"
        android:background="@drawable/rectangle1"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15sp"
            android:src="@drawable/about"
            />
        <TextView
            android:text="About"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentLeft="true"
            android:paddingTop="2sp"
            android:id="@+id/aboutin"
            android:layout_alignParentStart="true"
            android:clickable="true"
            />
    </LinearLayout>







</RelativeLayout>
